<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head")  %>
    <title>Blog</title>
</head>

<body>
    <%- include("./partials/nav")  %>
    <% if (locals.blog) { %>
        <div class=" container max-w-3xl mx-auto px-4 mt-10">
          <h1 class="text-3xl font-bold text-center mb-6"><%= blog.title %></h1>
      
          <div class="flex justify-center mb-6">
            <img 
              src="<%= blog.coverImage %>" 
              alt="Blog Image" 
              class="rounded-lg shadow-md"
              style=" width: 500px; height: 300px; object-fit: cover;"
            >
          </div>
      
          <p class="mt-6 text-base leading-relaxed text-gray-800 text-justify">
            <%= blog.body %>
          </p>
        </div>

        <div class="container mt-5">
            
             %>
            <img src="<%= blog.createdBy.profileImage %>" class="rounded-circle" style="width: 50px; height: 50px;">
            <span><%= blog.createdBy.name %></span>
          </div>

      <% } %>

      <div class="container">
        <h1>Comment</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="POST">
                <div class="mb-3 mt-5">
                  <input type="text" class="form-control" name="content" placeholder="Enter your comment">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
              </form>
        <% } %>
      </div>

      <div class="container mt-15">

        <% comments.forEach(comment => { %>
            <img src="<%= comment.createdBy.profileImage%>" class="rounded-circle" style="width: 50px; height: 50px;">
            <span><%= comment.createdBy.name %></span>
            <p><%= comment.content %></p>
        <% }) %>
      </div>
      
    <%- include("./partials/script")  %>
</body>

</html>