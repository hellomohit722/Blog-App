<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head")  %>
    <title>Home Page</title>
</head>

<body>
    <%- include("./partials/nav")  %>
    <div class="container mt-5 d-flex flex-wrap justify-content-center gap-5">
        <% blogs.forEach(blog => { %>
            <div class="card" style="width: 18rem;">
                <div style="width: 100%; height: 200px; overflow: hidden;">
                    <img src="<%= blog.coverImage %>" class="card-img-top" style="width: 100%; height: 100%; object-fit: cover;" alt="...">
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <a href="/blog/<%=blog._id%>" class="btn btn-primary">View</a>
                </div>
            </div>
        <% }) %>
    </div>
    
    <%- include("./partials/script")  %>
</body>

</html>